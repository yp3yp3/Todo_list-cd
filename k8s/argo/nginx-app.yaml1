apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: test
spec:
  project: default
  source:
    repoURL: https://github.com/yp3yp3/Todo_list-cd
    path: k8s/tests
    targetRevision: HEAD
    directory:
      recurse: true
      jsonnet: {}
  destination:
    server: https://kubernetes.default.svc
    namespace: test
  syncPolicy:
    automated:
      prune: true
      selfHeal: true
    syncOptions:
      - CreateNamespace=true
